# Database
# For local development with PostgreSQL (use Docker or local Postgres):
# DATABASE_URL="postgresql://user:password@localhost:5432/specbot"
# 
# For Vercel deployment (get this from Vercel Postgres):
# DATABASE_URL="postgres://default:xxx@xxx-pooler.us-east-1.postgres.vercel-storage.com:5432/verceldb"
DATABASE_URL="postgresql://user:password@localhost:5432/specbot"

# OpenAI API Key
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY="your-openai-api-key-here"

# Azure Document Intelligence
# Get your endpoint and key from Azure Portal
# See SETUP_AZURE.md for detailed setup instructions
AZURE_DOCUMENT_INTELLIGENCE_ENDPOINT="https://your-resource-name.cognitiveservices.azure.com/"
AZURE_DOCUMENT_INTELLIGENCE_KEY="your-azure-key-here"

# Pinecone Vector Database
# Get your API key from Pinecone dashboard
# See SETUP_PINECONE.md for detailed setup instructions
PINECONE_API_KEY="your-pinecone-api-key-here"
PINECONE_ENVIRONMENT="us-east-1-aws"
PINECONE_INDEX_NAME="specbot-embeddings"

